<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.WebView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.Controllers.EditVocabController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #FFFFFF;">
    <center>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label text="Từ tiếng Anh:">
                                    <font>
                                        <Font size="20.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="10.0" right="20.0" top="20.0"/>
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="wordTextField">
                                    <font>
                                        <Font size="19.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </VBox.margin>
                                </TextField>
                                <TextArea fx:id="meaningTextArea" prefHeight="300.0" prefWidth="200.0" wrapText="true">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets left="10.0" right="10.0" top="10.0"/>
                                    </VBox.margin>
                                </TextArea>
                            </children>
                        </VBox>
                    </center>
                    <bottom>
                        <HBox alignment="CENTER_LEFT" maxHeight="50.0" minHeight="50.0" prefHeight="100.0"
                              prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButton_OnClicked"
                                        style="-fx-background-color: #34d154; -fx-cursor: hand;" text="✓ Lưu">
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBackButton_OnClicked"
                                        style="-fx-background-color: #c5d0d6; -fx-cursor: hand;" text="⏎ Quay lại">
                                    <HBox.margin>
                                        <Insets left="50.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </bottom>
                </BorderPane>
                <BorderPane GridPane.columnIndex="1">
                    <top>
                        <Label text="Xem trước" BorderPane.alignment="CENTER_LEFT">
                            <font>
                                <Font size="20.0"/>
                            </font>
                            <BorderPane.margin>
                                <Insets bottom="5.0" left="10.0" right="20.0" top="20.0"/>
                            </BorderPane.margin>
                        </Label>
                    </top>
                    <center>
                        <WebView fx:id="webView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="50.0" left="10.0" right="10.0"/>
                            </BorderPane.margin>
                        </WebView>
                    </center>
                </BorderPane>
            </children>
        </GridPane>
    </center>

</BorderPane>
